        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "~components/*": ["src/components/*"],
            "~utils/*": ["src/utils/*"],
            "~views/*": ["src/views/*"],
            "~hooks/*": ["src/hooks/*"],
            "~providers/*": ["src/providers/*"],
